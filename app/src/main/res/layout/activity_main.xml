<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/big_noodle_titling_oblique"
            android:gravity="center_horizontal"
            android:text="Bienvenido a MancOW, por favor selecciona tu plataforma"
            android:textColor="#FFF"
            android:textSize="26sp" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            app:srcCompat="@drawable/ow_logo" />

        <Spinner
            android:id="@+id/spinPlatform"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:entries="@array/array_platforms"
            android:spinnerMode="dialog" />

        <TextView
            android:id="@+id/txtIdentificador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/big_noodle_titling_oblique"
            android:gravity="center_horizontal"
            android:text="Ingresa tu"
            android:textColor="#FFF"
            android:textSize="26sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txtInputUsuario"
            style="@style/InputTextLayoutStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foregroundTint="#FDFDFD"
            app:boxCornerRadiusBottomEnd="5dp"
            app:boxCornerRadiusBottomStart="5dp"
            app:boxCornerRadiusTopEnd="5dp"
            app:boxCornerRadiusTopStart="5dp"
            app:boxStrokeColor="#FFF">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/big_noodle_titling"
                android:hint="Identificador"
                android:singleLine="true"
                android:textColor="#FFF"
                android:textSize="22sp" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <Button
            android:id="@+id/btnUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/ow_blue"
            android:elevation="10dp"
            android:fontFamily="@font/big_noodle_titling"
            android:padding="10dp"
            android:text="Aceptar"
            android:textSize="22sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="** Tu perfil de carrera, debe estar público para un correcto funcionamiento"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/txtHowTo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_horizontal"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/big_noodle_titling_oblique"
            android:gravity="center_horizontal"
            android:text="¿Cómo coloco mi perfil público?"
            android:textColor="#FFF"
            android:textSize="16sp"
            android:textStyle="italic"
            android:layout_marginBottom="50dp"/>

        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adViewLogin"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-4694663491994854/6968872762">
            <!--ca-app-pub-3940256099942544/6300978111-->
            <!--ads:adUnitId="ca-app-pub-4694663491994854/6968872762">-->

        </com.google.android.gms.ads.AdView>
    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>